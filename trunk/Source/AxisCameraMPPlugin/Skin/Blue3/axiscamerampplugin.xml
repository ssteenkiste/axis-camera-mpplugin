<?xml version="1.0" encoding="utf-8" ?>

<window>

	<!-- Definitions -->
	<define>#header.image:axiscamerampplugin_logo.png</define>

	<!-- Window properties -->
	<id>9548</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>

	<!-- Controls -->
	<controls>

		<!-- Imports -->
		<import>common.window.roundedges.xml</import>
		<import>common.time.xml</import>

		<!-- List of cameras -->
		<control>
			<type>group</type>
			<visible>!Control.HasFocus(50)</visible>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="0,-300">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
			<animation effect="rotatey" start="20" end="0" center="525,0" tween="back" ease="easeout" time="500" reversible="false">hidden</animation>
			<animation effect="rotatey" start="0" end="20" center="525,0"  tween="back" ease="easeout" time="500" reversible="false">visible</animation>
			<control>
				<description>Facade view visualizing a list of cameras</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>listcontrol</description>
					<type>listcontrol</type>
					<id>50</id>
					<scrollOffset>2</scrollOffset>
				</control>
			</control>
		</control>

		<!-- Image displaying a snapshot of the selected camera -->
		<control>
			<type>image</type>
			<id>500</id>
			<posX>44</posX>
			<posY>153</posY>
			<width>138</width>
			<height>138</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
			<visible>Control.HasFocus(50)</visible>
			<animation effect="fade" time="450" reversible="false">visible</animation>
		</control>

		<!-- Frame around the selected camera snapshot -->
		<control>
			<type>image</type>
			<id>1</id>
			<posX>40</posX>
			<posY>150</posY>
			<width>148</width>
			<height>144</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">Picture_cover.png</texture>
			<visible>Control.HasThumb(500)+Control.HasFocus(50)</visible>
			<animation effect="fade" time="450" reversible="false">visible</animation>
		</control>

		<!-- Label stating "Info:" -->
		<control>
			<type>fadelabel</type>
			<id>1</id>
			<posX>50</posX>
			<posY>330</posY>
			<width>200</width>
			<label>Info:</label>
			<font>font14</font>
			<visible>Control.HasThumb(500)+Control.HasFocus(50)</visible>
			<animation effect="fade" time="450" reversible="false">visible</animation>
		</control>

		<!-- Row of information about the selected camera  -->
		<control>
			<type>fadelabel</type>
			<id>1</id>
			<posX>50</posX>
			<posY>354</posY>
			<width>200</width>
			<label>#selecteditem</label>
			<font>font14</font>
			<visible>Control.HasFocus(50)</visible>
			<animation effect="fade" time="450" reversible="false">visible</animation>
		</control>
	</controls>
</window>