<?xml version="1.0" encoding="utf-8" ?>
<configuration>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net>
    <!-- A debug log, which log everything to file -->
    <appender name="ACM_debug" type="log4net.Appender.RollingFileAppender">
      <file value="${TMP}\ACM_debug.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maximumFileSize value="30MB" />
      <maxSizeRollBackups value="2" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="\t%d{ISO8601}\t[%t] %-5p] %c - %m %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
      </filter>
    </appender>

    <!-- A debug log, which log everything to e.g. DbgView -->
    <appender name="OutputDebugStringAppender" type="log4net.Appender.OutputDebugStringAppender" >
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="[ACM] [%t] %-5p] %c - %m %n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="DEBUG" />
      </filter>
    </appender>


    <root>
      <level value="DEBUG" />
      <appender-ref ref="OutputDebugStringAppender" />
      <appender-ref ref="ACM_debug" />
    </root>

    
  </log4net>
</configuration>
