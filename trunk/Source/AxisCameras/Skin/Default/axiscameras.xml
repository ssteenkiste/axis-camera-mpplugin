<?xml version="1.0" encoding="utf-8" ?>

<!-- This view is stripped down version of MediaPortal's myvideo.xml -->
<window>

    <!-- Window properties -->
    <id>9548</id>
    <defaultcontrol>50</defaultcontrol>
    <allowoverlay>yes</allowoverlay>

    <!-- Controls -->
    <controls>

        <!-- Background -->
        <control>
            <description>BG</description>
            <type>image</type>
            <id>1</id>
            <texture>BH AxisCameras.jpg</texture>
            <posX>-160</posX>
            <posY>0</posY>
            <width>1280</width>
            <height>720</height>
            <colordiffuse>90ffffff</colordiffuse>
        </control>

        <!-- Imports -->
        <import>common.window.xml</import>
        <import>common.time.xml</import>

        <!-- General overlay -->
        <control>
            <description>General Overlay</description>
            <id>0</id>
            <type>image</type>
            <posX>0</posX>
            <posY>30</posY>
            <width>960</width>
            <height>720</height>
            <texture>general_overlay.png</texture>
        </control>

        <!-- List of cameras -->
        <control>
            <description>group element</description>
            <type>group</type>
            <visible>!Control.HasFocus(50)</visible>
            <animation effect="fade" start="0" end="100" time="200">WindowOpen</animation>
            <animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
            <control>
                <description>composite control consisting of a list control and a thumbnail panel</description>
                <type>facadeview</type>
                <id>50</id>
                <control>
                    <description>listcontrol</description>
                    <type>listcontrol</type>
                    <id>50</id>
                    <width>412</width>
                    <playedColor>ffffffff</playedColor>
                    <playedColor2>ffffffff</playedColor2>
                    <textcolor>ff99f9ff</textcolor>
                    <textcolorNoFocus>ff99f9ff</textcolorNoFocus>
                    <textXOff2>412</textXOff2>
                    <textYOff2>2</textYOff2>
                    <textXOff3>1908</textXOff3>
                    <textYOff3>8</textYOff3>
                    <textalign3>right</textalign3>
                    <font3>font9</font3>
                    <scrollOffset>2</scrollOffset>
                    <spinCanFocus>yes</spinCanFocus>
                    <unfocusedAlpha>160</unfocusedAlpha>
                    <folderPrefix />
                    <folderSuffix />
                </control>
            </control>
        </control>

        <!-- Image background -->
        <control>
            <description>Overlay text right</description>
            <id>0</id>
            <type>image</type>
            <posX>532</posX>
            <posY>156</posY>
            <width>412</width>
            <height>466</height>
            <texture mask="picturethumbmask.png">black.png</texture>
            <colordiffuse>60ffffff</colordiffuse>
        </control>

        <!-- Image -->
        <control>
            <description>Actual cover/image</description>
            <id>500</id>
            <type>image</type>
            <posX>795</posX>
            <posY>200</posY>
            <width>135</width>
            <height>194</height>
            <texture mask="videothumbmask.png">#selectedthumb</texture>
        </control>

        <!-- Image glow -->
        <control>
            <type>image</type>
            <id>1</id>
            <posX>795</posX>
            <posY>200</posY>
            <width>135</width>
            <height>194</height>
            <texture>Videothumbframe.png</texture>
        </control>

        <!-- Name text -->
        <control>
            <description>Name txt</description>
            <type>label</type>
            <id>1</id>
            <posX>547</posX>
            <posY>187</posY>
            <label>Name:</label>
            <font>font10</font>
            <align>left</align>
            <textcolor>ff6FAFE1</textcolor>
        </control>

        <!-- Name value -->
        <control>
            <description>Name value</description>
            <type>fadelabel</type>
            <id>1</id>
            <posX>547</posX>
            <posY>206</posY>
            <width>210</width>
            <label>#AxisCameras.Camera.Name</label>
            <font>font12</font>
            <textcolor>ivory</textcolor>
        </control>

        <!-- Address text -->
        <control>
            <description>Address txt</description>
            <type>label</type>
            <id>1</id>
            <posX>547</posX>
            <posY>231</posY>
            <label>Address:</label>
            <font>font10</font>
            <align>left</align>
            <textcolor>ff6FAFE1</textcolor>
        </control>

        <!-- Address value -->
        <control>
            <description>Address value</description>
            <type>fadelabel</type>
            <id>1</id>
            <posX>547</posX>
            <posY>250</posY>
            <label>#AxisCameras.Camera.Address</label>
            <font>font12</font>
            <width>210</width>
            <textcolor>ivory</textcolor>
        </control>
    </controls>
</window>