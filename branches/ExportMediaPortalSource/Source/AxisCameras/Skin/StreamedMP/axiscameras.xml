<?xml version="1.0" encoding="utf-8" ?>

<window>

	<!-- Definitions -->
	<define>#header.hover:hoover_AxisCameras.png</define>
	
	<!-- Window properties -->
	<id>9548</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>

	<!-- Controls -->
	<controls>

		<!-- Background image -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1280</width>
			<height>720</height>
			<texture>#header.hover</texture>
			<animation effect="fade" time="300" start="0">WindowOpen</animation>
		</control>

		<!-- Background overlay -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1281</width>
			<height>720</height>
			<texture>mainoverlay.png</texture>
		</control>

		<!-- Image displaying a snapshot of the selected camera -->
		<control>
			<id>204</id>
			<type>image</type>
			<posX>90</posX>
			<posY>250</posY>
			<width>348</width>
			<height>348</height>
			<keepaspectratio>yes</keepaspectratio>
			<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
			<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
		</control>

		<!-- Separator at the bottom -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>675</posY>
			<width>1280</width>
			<height>47</height>
			<texture>imagestreamtitle.png</texture>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
		</control>

		<!-- Page count background -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>1013</posX>
			<posY>684</posY>
			<width>260</width>
			<height>30</height>
			<texture>mediacountbg_Spin.png</texture>
			<animation effect="fade" time="150">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
		</control>

		<!-- Page count label -->
		<control>
			<type>label</type>
			<label>30009</label>
			<id>0</id>
			<posX>1023</posX>
			<posY>688</posY>
			<font>mediastream12tc</font>
			<textcolor>ff909090</textcolor>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
		</control>

		<!-- Facade item count -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>1065</posX>
			<posY>13</posY>
			<width>202</width>
			<height>28</height>
			<texture>mediacountbg.png</texture>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
			<visible>control.isvisible(50)</visible>
		</control>

		<!-- Item count label -->
		<control>
			<type>label</type>
			<label>507</label>
			<id>0</id>
			<width>135</width>
			<posX>1078</posX>
			<posY>16</posY>
			<align>left</align>
			<font>mediastream10tc</font>
			<textcolor>ff909090</textcolor>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
			<visible>control.isvisible(50)</visible>
		</control>

		<!-- Item count -->
		<control>
			<type>label</type>
			<label>#itemcount</label>
			<id>0</id>
			<posX>1238</posX>
			<posY>14</posY>
			<font>mediastream11c</font>
			<textcolor>ff006698</textcolor>
			<align>right</align>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
			<visible>control.isvisible(50)</visible>
		</control>

		<!-- Selected item label -->
		<control>
			<type>fadelabel</type>
			<id>1</id>
			<posX>25</posX>
			<posY>684</posY>
			<width>950</width>
			<font>mediastream16tc</font>
			<label>#selecteditem</label>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="800,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="800,0">WindowClose</animation>
		</control>

		<!-- List of cameras -->
		<control>
			<animation effect="fade" time="250">WindowOpen</animation>
			<animation effect="fade" time="250">WindowClose</animation>
			<animation effect="slide" time="150" start="1200,0">WindowOpen</animation>
			<animation effect="slide" time="250" end="1200,0">WindowClose</animation>
			<type>group</type>
			<control>
				<description>Facade view visualizing a list of cameras</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>listcontrol</description>
					<type>listcontrol</type>
					<id>50</id>
					<posX>620</posX>
					<posY>240</posY>
					<height>480</height>
					<width>660</width>
					<onleft>99</onleft>
					<onright>2</onright>
					<onleft>2</onleft>
					<scrollOffset>5</scrollOffset>
					<PinIconWidth>15</PinIconWidth>
					<PinIconHeight>15</PinIconHeight>
					<PinIconXOff>57</PinIconXOff>
					<PinIconYOff>13</PinIconYOff>
					<itemWidth>32</itemWidth>
					<itemHeight>32</itemHeight>
					<IconXOff>12</IconXOff>
					<IconYOff>4</IconYOff>
					<textXOff>25</textXOff>
					<textYOff>5</textYOff>
					<textXOff2>0</textXOff2>
					<textYOff2>5</textYOff2>
					<font2>mediastream10</font2>
					<keepaspectratio>yes</keepaspectratio>
					<spinPosX>1175</spinPosX>
					<spinPosY>681</spinPosY>
					<spinAlign>Right</spinAlign>
					<spinColor>ff006698</spinColor>
					<textureUp>arrow_round_up_nofocus.png</textureUp>
					<textureDown>arrow_round_down_nofocus.png</textureDown>
					<textureUpFocus>arrow_round_up_focus.png</textureUpFocus>
					<textureDownFocus>arrow_round_down_focus.png</textureDownFocus>
					<spinWidth>50</spinWidth>
					<spinHeight>37</spinHeight>
					<suffix>|</suffix>
				</control>
			</control>
		</control>

		<!-- Imports -->
		<import>common.overlays2.xml</import>
		<import>common.window.xml</import>
		<import>common.time.xml</import>

	</controls>
</window>