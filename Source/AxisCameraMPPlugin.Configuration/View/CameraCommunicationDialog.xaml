<Window
	x:Class="AxisCameraMPPlugin.Configuration.View.CameraCommunicationDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mvvm="clr-namespace:AxisCameraMPPlugin.Mvvm;assembly=AxisCameraMPPlugin.Mvvm"
	Title="Camera Communication"
	Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
	Style="{DynamicResource DialogWindow}"
	WindowStartupLocation="CenterOwner"
	mvvm:LifetimeBehaviors.Loaded="{Binding LoadedCommand}">
	
	<!-- Resources -->
	<Window.Resources>
		<ResourceDictionary Source="CameraCommunicationDialogResources.xaml"/>
	</Window.Resources>
	
	<!-- Root element -->
	<StackPanel Style="{StaticResource RootElementStyle}">
		
		<!-- Description -->
		<TextBlock
			Margin="3,9,3,15"
			MinWidth="250"
			Text="Communicating with camera..."/>
		
		<!-- Progress -->
		<ProgressBar IsIndeterminate="True"/>
		
		<!-- Cancel button -->
		<Button
			Content="Cancel"
			IsCancel="True"
			Command="{Binding CancelCommand}"/>
		
	</StackPanel>
</Window>
