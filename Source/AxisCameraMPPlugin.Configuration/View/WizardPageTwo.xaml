<UserControl
	x:Class="AxisCameraMPPlugin.Configuration.View.WizardPageTwo"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Resources -->
	<UserControl.Resources>
		<ResourceDictionary Source="WizardPageResources.xaml"/>
	</UserControl.Resources>

	<!-- Root element -->
	<Grid>

		<!-- Row and column definitions -->
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		<!-- Name -->
		<TextBlock Text="Name:"/>
		<TextBox
			Grid.Column="1"
			MaxLength="64"
			Text="{Binding Name}"/>
		
		<!-- Snapshot group -->
		<GroupBox
			Grid.Row="1"
			Grid.ColumnSpan="2"
			Header="Snapshot">
			
			<Grid>

				<!-- Row definitions -->
				<Grid.RowDefinitions>
					<RowDefinition/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				
				<!-- Snapshot image -->
				<Image
					Source="{Binding Snapshot}"/>
				
				<!-- Refresh button -->
				<Button
					Grid.Row="1"
					HorizontalAlignment="Right"
					Content="Refresh"
					Command="{Binding RefreshCommand}"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
